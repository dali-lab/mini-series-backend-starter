<script>
  // here we can modularize our javascript scripts and embed them directly into the head of the webpage
  async function deleteUsers() {
    const urls = [];
    $('input[type=checkbox]').each(function () { // we use jquery to get each checked checkbox
      if (!this.checked) return;

      const id = this.id; // each checkbox should be instantiated with the user's id as the DOM element id
      if (!id) return;

      urls.push('/users?id=' + id);
    });

    await Promise.all(urls.map((url) => axios.delete(url)));
    window.location.reload();
  }

  async function addUser() {
    const firstName = $('input[name=firstName]').val();
    const lastName = $('input[name=lastName]').val();
    const email = $('input[name=email]').val();
    const password = $('input[name=email]').val();

    await axios.post('/users', {firstName, lastName, email, password});
    window.location.reload();
  }
</script>